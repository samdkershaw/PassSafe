<Controls:MetroWindow x:Class="PassSafe.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassSafe"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="About PassSafe"
                      TitleCaps="False"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <ScrollViewer VerticalAlignment="Top"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Hidden">
            <TextBlock x:Name="txtAbout" TextWrapping="Wrap" Text="" 
                        FontFamily="Roboto" FontSize="12" Margin="5" Foreground="White"
                       MaxWidth="300"/>

        </ScrollViewer>

    </Grid>
</Controls:MetroWindow>
